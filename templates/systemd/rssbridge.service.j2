[Unit]
Description=RSS-Bridge ({{ rssbridge_identifier }})
{% for service in rssbridge_systemd_required_services_list %}
Requires={{ service }}
After={{ service }}
{% endfor %}
{% for service in rssbridge_systemd_wanted_services_list %}
Wants={{ service }}
{% endfor %}
DefaultDependencies=no

[Service]
Type=simple
Environment="HOME={{ devture_systemd_docker_base_systemd_unit_home_path }}"
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ rssbridge_identifier }} 2>/dev/null || true'
ExecStartPre=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ rssbridge_identifier }} 2>/dev/null || true'

ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} create \
      --rm \
      --name={{ rssbridge_identifier }} \
      --log-driver=none \
      --user={{ rssbridge_uid }}:{{ rssbridge_gid }} \
      --cap-drop=ALL \
      --read-only \
      --network={{ rssbridge_container_network }} \
      {% if rssbridge_container_http_host_bind_port %}
      -p {{ rssbridge_container_http_host_bind_port }}:{{ rssbridge_container_http_port }} \
      {% endif %}
      --env-file={{ rssbridge_base_path }}/env \
      --label-file={{ rssbridge_base_path }}/labels \
      --mount type=bind,src={{ rssbridge_data_path }},dst=/app/data \
      {% for volume in rssbridge_container_additional_volumes %}
      --mount type={{ volume.type | default('bind' if '/' in volume.src else 'volume') }},src={{ volume.src }},dst={{ volume.dst }}{{ (',' + volume.options) if volume.options else '' }} \
      {% endfor %}
      {% for arg in rssbridge_container_extra_arguments %}
      {{ arg }} \
      {% endfor %}
      {{ rssbridge_container_image_self_build_name if rssbridge_container_image_self_build else rssbridge_container_image }}

{% for network in rssbridge_container_additional_networks %}
ExecStartPre={{ devture_systemd_docker_base_host_command_docker }} network connect {{ network }} {{ rssbridge_identifier }}
{% endfor %}

ExecStart={{ devture_systemd_docker_base_host_command_docker }} start --attach {{ rssbridge_identifier }}

ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} stop -t {{ devture_systemd_docker_base_container_stop_grace_time_seconds }} {{ rssbridge_identifier }} 2>/dev/null || true'
ExecStop=-{{ devture_systemd_docker_base_host_command_sh }} -c '{{ devture_systemd_docker_base_host_command_docker }} rm {{ rssbridge_identifier }} 2>/dev/null || true'

Restart=always
RestartSec=30
SyslogIdentifier={{ rssbridge_identifier }}

[Install]
WantedBy=multi-user.target
